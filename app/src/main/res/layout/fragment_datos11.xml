<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/termometro"
        android:id="@+id/termometro"
        android:scaleType="fitXY"
        android:layout_marginTop="86dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignEnd="@+id/gota" />

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/gota"
        android:id="@+id/gota"
        android:scaleType="fitXY"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/termometro"
        android:layout_alignParentStart="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41dp"
        android:id="@+id/textHum"
        android:layout_alignBottom="@+id/gota"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="TextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:id="@+id/textTemp"
        android:layout_alignTop="@+id/termometro"
        android:layout_alignStart="@+id/textHum" />
</RelativeLayout>