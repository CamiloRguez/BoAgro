<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="layout.WeatherFragment"
    android:id="@+id/FrgWeather">


    <!-- TODO: Update blank fragment layout -->

    <ImageView
        android:layout_width="80dp"
        android:layout_height="100dp"
        android:src="@drawable/gota"
        android:id="@+id/gota"
        android:scaleType="fitXY"
        android:layout_marginTop="50dp"
        android:layout_below="@+id/termometro"
        android:layout_alignParentStart="true" />

    <com.example.bo_1.boagro.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textHum"
        android:textSize="50sp"
        app:font="print_bold_tt.ttf"
        android:layout_marginStart="40dp"
        android:layout_alignBottom="@+id/gota"
        android:layout_toEndOf="@+id/gota"
        android:layout_marginBottom="26dp" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="100dp"
        android:src="@drawable/termometro"
        android:id="@+id/termometro"
        android:scaleType="fitXY"
        android:layout_marginTop="85dp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/textHum"
        android:layout_marginStart="16dp" />

    <ProgressBar
        android:id="@+id/circular_progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:indeterminate="false"
        android:max="55"
        android:progress="55"
        android:progressDrawable="@drawable/circular_progressbar"
        android:layout_marginBottom="23dp"
        android:layout_above="@+id/textHum"
        android:layout_centerHorizontal="true" />

    <com.example.bo_1.boagro.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textTemp"
        android:textSize="50sp"
        app:font="print_bold_tt.ttf"
        android:layout_marginLeft="33dp"
        android:layout_marginBottom="24dp"
        android:layout_alignBottom="@+id/termometro"
        android:layout_alignEnd="@+id/termometro" />


</RelativeLayout>
